@model Top2000_MVC.ViewModels.ArtiestViewModel

@{
    ViewData["Title"] = "Bewerk Artiest";
}

<h2 class="text-center mt-4">Bewerk Artiest: @Model.Naam</h2>

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
    }

    <form method="post">
        <input type="hidden" asp-for="ArtiestId" />

        <div class="mb-3">
            <label class="form-label" for="Wiki">Wiki:</label>
            <input asp-for="Wiki" class="form-control" type="text" required />
            <div class="text-danger" id="WikiError">Dit veld is verplicht.</div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="Biografie">Biografie:</label>
            <textarea asp-for="Biografie" class="form-control" rows="5" required></textarea>
            <div class="text-danger" id="BiografieError">Dit veld is verplicht.</div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="Foto">Foto URL:</label>
            <input asp-for="Foto" class="form-control" type="text" required />
            <div class="text-danger" id="FotoError">Dit veld is verplicht.</div>
        </div>

        <button type="submit" class="btn btn-primary w-100">Opslaan</button>
    </form>

    <a asp-action="Index" class="btn btn-secondary w-100 mt-3">Annuleren</a>
</div>
