@model Top2000_MVC.ViewModels.ArtiestViewModel

@{
    ViewData["Title"] = "Artiest Bewerken";
}

<h2>Artiest Bewerken: @Model.Naam</h2>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
}

<form method="post">
    <input type="hidden" asp-for="ArtiestId" /> <!-- Voeg de ArtiestId toe aan het formulier. -->

    <div class="form-group">
        <label>Naam</label>
        <input type="text" class="form-control" asp-for="Naam" readonly />
    </div>
    <div class="form-group">
        <label>Wiki</label>
        <input type="text" class="form-control" asp-for="Wiki" />
    </div>
    <div class="form-group">
        <label>Biografie</label>
        <textarea class="form-control" asp-for="Biografie"></textarea>
    </div>
    <div class="form-group">
        <label>Foto URL</label>
        <input type="text" class="form-control" asp-for="Foto" />
    </div>
    <button type="submit" class="btn btn-primary">Opslaan</button>
    <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
</form>
