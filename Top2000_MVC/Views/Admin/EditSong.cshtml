@model Top2000_MVC.ViewModels.SongViewModel

@{
    ViewData["Title"] = "Bewerk Nummer";
}

<h2 class="text-center mt-4">Bewerk Nummer: @Model.Titel</h2>

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
    }

    <form asp-action="EditSong" method="post">
        <input type="hidden" asp-for="Titel" />

        <div class="mb-3">
            <label class="form-label" for="Lyrics">Songtekst:</label>
            <textarea asp-for="Lyrics" class="form-control" rows="5" required></textarea>
            <div class="text-danger" id="LyricsError">Dit veld is verplicht.</div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="Afbeelding">Afbeelding URL:</label>
            <input asp-for="Afbeelding" class="form-control" type="text" required />
            <div class="text-danger" id="AfbeeldingError">Dit veld is verplicht.</div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="Youtube">YouTube-link:</label>
            <input asp-for="Youtube" class="form-control" type="text" required />
            <div class="text-danger" id="YoutubeError">Dit veld is verplicht.</div>
        </div>

        <button type="submit" class="btn btn-primary w-100">Opslaan</button>
        <a asp-action="Index" class="btn btn-secondary w-100 mt-3">Annuleren</a>
    </form>

</div>
