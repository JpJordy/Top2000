    }

    button:focus {
        outline: none;
    }

    /* Arrow icon styling */
    .arrow-icon {
        width: 24px;
        height: 24px;
        vertical-align: middle;
    }

    /* Disabled hover effect for the current set button */
    .disabled-button:hover {
        background-color: white;
        transform: none;
    }
</style>

<div id="buttonContainer"></div>

<script>
    let currentSet = 1;
    const totalSets = 7; // Aantal DJ-groepen
    const groups = document.querySelectorAll(".dj-group");
    const buttonContainer = document.getElementById("buttonContainer");

    function showSet(setNumber) {
        groups.forEach((group, index) => {
            group.style.display = index === setNumber - 1 ? "flex" : "none";
        });
        currentSet = setNumber;
        updateButtons();
    }

        function createArrowButton(direction, onClick) {
        const button = document.createElement("button");
        button.innerHTML = direction === "left"
            ? '<svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" class="arrow-icon"><path fill="white" d="m8.48 11.39 6.19-5.82a.65.65 0 0 1 .89 0l.37.36a.58.58 0 0 1 0 .85l-5.37 5.03 5.37 5.03a.58.58 0 0 1 0 .85l-.38.36a.65.65 0 0 1-.89 0l-6.19-5.81c-.24-.24-.24-.62 0-.85Z"></path></svg>'
            : '<svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" class="arrow-icon"><path fill="white" d="m15.52 12.61-6.19 5.82a.65.65 0 0 1-.89 0l-.37-.36a.58.58 0 0 1 0-.85l5.37-5.03-5.37-5.03a.58.58 0 0 1 0-.85l.38-.36a.65.65 0 0 1 .89 0l6.19 5.81c.24.24.24.62 0 .85Z"></path></svg>';

        button.style.margin = "5px";
        button.style.padding = "10px";
        button.style.fontSize = "16px";
        button.style.cursor = "pointer";
        button.style.backgroundColor = "red";
        button.style.color = "black";
        button.style.border = "none";
        button.style.borderRadius = "5px";
        button.addEventListener("click", onClick);
        return button;
    }

    function updateButtons() {
        buttonContainer.innerHTML = "";

        if (currentSet > 1) {
            buttonContainer.appendChild(createArrowButton("left", () => showSet(currentSet - 1)));
        }

        for (let i = 1; i <= totalSets; i++) {
            const button = document.createElement("button");
            button.textContent = i;
            button.style.margin = "5px";
            button.style.padding = "10px 15px";
            button.style.fontSize = "16px";  /* Smaller font for numbers */
            button.style.cursor = "pointer";
            button.style.backgroundColor = i === currentSet ? "red" : "white";
            button.style.color = i === currentSet ? "white" : "black";
            button.style.border = "none";
            button.style.borderRadius = "5px";
            button.addEventListener("click", () => showSet(i));
            button.addEventListener("mouseover", () => {
                if (i !== currentSet) {
                    button.style.backgroundColor = "lightgray";
                }
            });
            button.addEventListener("mouseout", () => {
                if (i !== currentSet) {
                    button.style.backgroundColor = "white";
                }
            });
            // Add a class to prevent hover effect on the current button
            if (i === currentSet) {
                button.classList.add("disabled-button");
            }
            buttonContainer.appendChild(button);
        }

        if (currentSet < totalSets) {
            buttonContainer.appendChild(createArrowButton("right", () => showSet(currentSet + 1)));
        }
    }

    showSet(1);
</script>
