<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Top2000_MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Top2000_MVC.styles.css" asp-append-version="true" />
    <style>
        /* Algemene styling */
        body {
            color: white;
        }

        /* Navbar Styling */
        .navbar {
            background-color: #22282e; /* Grijze achtergrond voor de navbar */
            border-bottom: none; /* Verwijder de lijn onder de navbar */
            width: 60%; /* Zorg dat de navbar 3/4 van de pagina beslaat */
            margin: 0 auto; /* Center de navbar in de pagina */
            display: flex;
            justify-content: space-between; /* Zorg dat de logo en nav-items netjes naast elkaar staan */
            align-items: center;
        }

        .navbar-logo {
            margin-right: 20px; /* Ruimte tussen het logo en de navigatie links */
        }

            .navbar-logo img {
                height: 50px;
            }

        .navbar-nav {
            gap: 20px;
            display: flex;
        }

        .nav-item {
            font-weight: 600;
            font-size: 16px;
            padding: 5px 10px;
        }

        .nav-link {
            color: white !important; /* Witte tekst voor de links */
            transition: 0.3s ease-in-out;
        }

            .nav-link:hover {
                color: red !important;
            }

        /* Dropdown Styling */
        .nav-item.dropdown:hover .dropdown-menu {
            display: block;
        }

        .dropdown-menu {
            background-color: white;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
        }

        .dropdown-item {
            font-size: 14px;
            padding: 8px 20px;
        }

            .dropdown-item:hover {
                background-color: red;
                color: white;
            }

        /* Footer Styling */
        .footer {
            background-color: white;
            padding: 15px;
            color: black;
        }

            .footer a {
                color: black;
                margin-right: 15px;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand navbar-logo" href="/">
                    <img src="https://cms-assets.nporadio.nl/npoRadio2/NPO-Radio-2-Top-2000-Logo-RGB.png?v=1638012168" alt="NPO Radio 2 Logo">
                </a>

                <!-- Toggler voor mobiel -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigatie -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Nieuws" asp-action="Index">Nieuws</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Podcasts" asp-action="Index">Podcasts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Programmering" asp-action="Index">Programmering</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" asp-area="" asp-controller="Top2000" asp-action="Index" role="button">
                                Top 2000
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Frequenties" asp-action="Index">Frequenties</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="VolgRadio2" asp-action="Index">Volg NPO Radio 2</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <a href="https://npo.nl/overnpo/algemene-voorwaarden/algemene-voorwaarden-online" target="_blank">Algemene voorwaarden</a>
            <a href="https://npo.nl/overnpo/privacy-en-security" target="_blank">Privacybeleid</a>
            <a href="https://cookies.nporadio2.nl/sites/NPO/nporadio2.nl/settings.html?version=v3.1.14-y0mmh" target="_blank">Cookiebeleid</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
